<% layout("layouts/boilerplate") %>
    <div class="row bg-info">
        <div class="col-md-6 offset-md-3" style="background-color: #fff; margin-top:25px;padding: 20px" >
            <form action="/employee" method="post" autocomplete="off">
                <input type="hidden" name="_id" value="<%= detail._id %>">
                <div class="form-group">
                  <label for="exampleInputEmail1">Full Name</label>
                  <input type="text" class="form-control" name="FullName" value="<%= detail.FullName %>" placeholder="FullName" id="FullName" aria-describedby="emailHelp">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Email address</label>
                    <input type="email" class="form-control" name="Email" value="<%= detail.Email %>" placeholder="Email" id="email" aria-describedby="emailHelp">
                  </div>
                  <div class="form-group">
                    <label for="exampleInputEmail1">Phone Number</label>
                    <input type="tel" class="form-control" name="Phone" value="<%= detail.Phone %>" id="Phone" aria-describedby="emailHelp">
                  </div>
                <button type="submit" class="btn btn-primary">Update</button>
              </form>
        </div>
    </div>
