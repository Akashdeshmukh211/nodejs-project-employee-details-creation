<% layout("layouts/boilerplate") %>
  <div class="row bg-info">
    <div class="col-md-8 " style="background-color: #fff; margin-top:25px;padding: 20px">
      <form id="form" autocomplete=""  >
        <div class="form-group" >
          <input type="hidden" name="id" id="_id" value=" ">
          <label>Full Name</label>
          <input type="text" class="form-control" name="fullName" placeholder="FullName" id="fullName"
            aria-describedby="emailHelp">
        </div>
        <div class="form-group">
          <label">Email address</label>
          <input type="email" class="form-control" name="email" placeholder="Email" id="email"
            aria-describedby="emailHelp">
        </div>
        <div class="form-group">
          <label >Phone Number</label>
          <input type="tel" class="form-control" name="phone" placeholder="8888888888"  id="phone">
        </div>
        <div class="row">
          <div class="col-2">
            <button type="submit" id="submit" class=" btn btn-primary right">Submit</button>
          </div>
          <div class="col-2">
            <button type="reset" class="cancel_employee btn btn-primary" >Cancel </button>
          </div>
        </div>
      </form>
      <br>
      <div class="employee_table">
        <button type="reset" class="add_employee btn btn-primary" >Add New </button>

        <table id="Datatable" class="table table-striped table-bordered" style="width:100%">
        </table>

      </div>
    </div>
   
  </div>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>

  <script src="/javascripts/main-script.js"></script>
  <script>
      $(function() {
          Employee.base_url = "http://localhost:4000/";
          Employee.init();
      });
  </script>  